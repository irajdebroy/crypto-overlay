{
  "manifest_version": 3,
  "name": "Crypto Overlay Assistant",
  "description": "Displays buy/sell indicators and fake testing analytics for crypto sites like pump.fun and DEX Screener.",
  "version": "1.2",
  "permissions": ["storage", "scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.pump.fun/*", "*://*.dexscreener.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "icons": {
    "48": "icon48.png"
  }
}
