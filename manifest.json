{
  "manifest_version": 3,
  "name": "Price Overlay Signals",
  "version": "1.0",
  "description": "Shows simple buy/sell signals (EMA crossover + RSI) overlaid on crypto pages. Does not trade.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.pump.fun/*",
    "*://*.dexscreener.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "Price Overlay Signals",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pump.fun/*",
        "*://*.dexscreener.com/*",
        "*://*/*"
      ],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "icons": {
    "48": "icon48.png"
  }
}
