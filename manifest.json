{
  "manifest_version": 3,
  "name": "Price Overlay Simulator",
  "version": "1.5",
  "description": "Shows buy/sell signals and simulates fake trading with analytics overlay on crypto sites.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.pump.fun/*",
    "*://*.dexscreener.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "Price Overlay Simulator",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pump.fun/*",
        "*://*.dexscreener.com/*"
      ],
      "js": ["content.js", "settings.js"],
      "css": ["overlay.css"]
    }
  ],
  "icons": {
    "48": "icon48.png"
  }
}
